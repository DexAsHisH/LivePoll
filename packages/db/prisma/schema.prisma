
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Poll {
  id          String    @id @default(cuid())
  question    String
  options     Option[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Option {
  id        String   @id @default(cuid())
  pollId    String
  text     String
  votes    Int      @default(0)

  poll     Poll     @relation(fields: [pollId], references: [id])
}
